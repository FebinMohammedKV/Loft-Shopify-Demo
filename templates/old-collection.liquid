.grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    padding: 0 5rem;
}
.grid .grid-container {
    display: flex;
    flex-direction: column;
    position: relative;
    gap: 1rem;
    cursor: pointer;
}
.grid .grid-container .top {
    position: absolute;
    top: 0;
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.grid .grid-container .top .sale {
    box-sizing: border-box;
    width: auto;
    min-width: fit-content;
    max-width: 100%; /* Optional: ensures it doesn't exceed the parent container */
    white-space: nowrap;
    background-color: red;
    color: white;
    padding: 3px 5px;
    font-size: 0.7rem;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0.5rem;
}
.grid .grid-container .top i {
    margin-top: 1rem;
}
.grid .grid-container .image {
    display: flex;
    width: 100%;
    height: 13.5rem;
    position: relative;
}
.grid .grid-container img {
    width: 100%;
}

.grid-container .image-container .f-image {
    position: absolute;
    width: 100%;
    object-fit: cover;
    transition: opacity 0.5s;
    cursor: pointer;
    opacity: 1;
}

.grid-container .image-container .f2-image {
    width: 100%;
    transition: opacity 0.5s;
    opacity: 0;
    object-fit: cover;
}

.grid-container:hover .f-image {
    opacity: 0;
}

.grid-container:hover .f2-image {
    opacity: 1;
}

.grid .grid-container .details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}
.grid .grid-container .details .head {
    font-size: 1rem;
    font-weight: bolder;
}
.grid .grid-container .details .para {
    font-size: 0.9rem;
