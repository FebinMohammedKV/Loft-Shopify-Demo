                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>stroke="currentColor" stroke-width="0.5"
            </svg>
        </a>
      <a href="/account">Return to account page</a>
    </div>
  </div>

  {% if customer.addresses.size > 0 %}
    {% for address in customer.addresses %}
      <div class="address">
        <div class="head">
          <p>{{ address.first_name }} {{ address.last_name }}{% if address.default %} <em>(Default)</em>{% endif %}</p>
        </div>
        <div class="customer_address">
          <p>{{ address.first_name }} {{ address.last_name }}</p>
          <p>{{ address.address1 }}</p>
          {% if address.address2 != "" %}
            <p>{{ address.address2 }}</p>
          {% endif %}
          <p>{{ address.city }} {% if address.province_code %}{{ address.province_code }}, {% endif %}{{ address.country }}</p>
          <p>{{ address.zip }}</p>
          <p>{{ address.phone }}</p>
        </div>
        <div class="address_actions">
          <button class="edit" data-id="{{ address.id }}">Edit</button>
          <button class="delete" data-id="{{ address.id }}">Delete</button>
        </div>
      </div>
    {% endfor %}
  {% else %}
    <p>No addresses found.</p>
