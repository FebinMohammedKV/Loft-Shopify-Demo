<div class="address-section">
  <nav class="breadcrumb">
    <a href="{{ shop.url }}">Home</a>
    {% if template contains 'customers/account' %}
      <span>Account</span>
    {% elsif template contains 'customers/addresses' %}
      <a href="/account">Account</a> <span>Addresses</span>
    {% elsif template contains 'customers/login' %}
      <span>Login</span>
    {% elsif template contains 'customers/register' %}
      <span>Register</span>
    {% elsif template contains 'products' %}
      {% if collection %}
        <a href="{{ collection.url }}">{{ collection.title }}</a>
      {% endif %}
      <span>{{ product.title }}</span>
    {% else %}
      <span>{{ page_title }}</span>
    {% endif %}
  </nav>

