<!-- /templates/customers/reset_password.liquid -->

<form action="/account/reset" method="post" class="reset-password-form">
  {% form 'reset_customer_password' %}
    
    {{ form.errors | default_errors }}
    
    <label for="password">Password</label>
    <input type="password" name="customer[password]" id="password" size="30" class="input-reset" required>
    
    <label for="password_confirmation">Confirm Password</label>
    <input type="password" name="customer[password_confirmation]" id="password_confirmation" size="30" class="input-reset" required>
    
    <input type="submit" value="Reset Password" class="btn-reset-password">
  
  {% endform %}
</form>

<style>
  /* Reset form styles */
.reset-password-form {
  max-width: 400px;
  margin: 0 auto;
  padding: 20px;
  background-color: #f9f9f9;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

/* Label styles */
.reset-password-form label {
  display: block;
  margin-bottom: 8px;
  font-weight: bold;
}

/* Input field styles */
.reset-password-form input[type="password"] {
  width: calc(100% - 20px); /* Adjusted for padding */
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 3px;
  font-size: 0.9rem;
}

/* Submit button styles */
.reset-password-form input[type="submit"] {
  width: 100%;
  padding: 12px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s;
}

.reset-password-form input[type="submit"]:hover {
  background-color: #45a049;
}

</style>
