{{ 'collection-list.css' | asset_url | stylesheet_tag }}

<div class="head">{{ collection.title }}</div>
<div class="collection-list">
  {% for block in section.blocks %}
    {% if block.settings.collection %}
      {% assign selected_collection = collections[block.settings.collection] %}
      <a href="{{ selected_collection.url }}" class="collection-item">
        <div class="collection-image-wrapper">
          <div class="collection-image"><img src="{{ selected_collection.image.src | img_url: 'master' }}" alt="{{ selected_collection.title }}"></div>
          <div class="collection-title">{{ selected_collection.title }}</div>
        </div>
      </a>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Collection List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List",
      "category": "Custom"
    }
  ]
}
{% endschema %}

