{{ 'loft_promise.css'| asset_url | stylesheet_tag }}

<section class="loft">
  <div class="head">THE LOFT PROMISE</div>
  <div class="grid-pro">
    {% for block in section.blocks %}
      {% if block.type == 'image_item' %}
        <div class="grid-ittems">
          <img src="{{ block.settings.image | img_url: '600x600' }}" alt="">
        </div>
      {% elsif block.type == 'content_item' %}
        <div class="grid-ittems cont" style="color: {{ block.settings.content_color }}">
          <p class="head" style="color: {{ block.settings.heading_color }}">{{ block.settings.heading }}</p>
          <p class="content">{{ block.settings.content }}</p>
          <a href="{{ block.settings.button_link }}">
            <button style="color: {{ block.settings.button_color }}; background-color: {{ block.settings.button_bg_color }};">{{ block.settings.button_text }}</button>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Multirow",
  "settings": [],
  "blocks": [
    {
      "type": "image_item",
      "name": "Image Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "content_item",
      "name": "Content Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "content_color",
          "label": "Content Color",
          "default": "#000000"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP ALL"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multirow",
      "category": "Custom"
    }
  ]
}
{% endschema %}
