{{ 'shop-section.css'| asset_url | stylesheet_tag }}

<section class="shop">
  <div class="image-container">
    <img src="{{ section.settings.shop_image | img_url: 'large' }}" alt="shop">
  </div>
  <div class="cont">
    <p class="top" style="color: {{ section.settings.top_text_color }}">{{ section.settings.top_text }}</p>
    <p class="head" style="color: {{ section.settings.heading_color }}">{{ section.settings.heading }}</p>
    <p class="para" style="color: {{ section.settings.paragraph_color }}">{{ section.settings.paragraph }}</p>
    <a href="{{ section.settings.button_link }}">
      <button style="color: {{ section.settings.button_text_color }}; background-color: {{ section.settings.button_bg_color }};">{{ section.settings.button_text }}</button>
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "image_picker",
      "id": "shop_image",
      "label": "Shop Image"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Text",
      "default": "FURNITURE PACKAGES"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SHOP THE LOOK"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Get everything you need for your property all in one with one of our furniture & accessories packages. Our packages include a range of styles to suit you and vary in price point, which means you can pick a package tailored to you and your resident's needs. Bespoke packages available on request."
    },
    {
      "type": "color",
      "id": "top_text_color",
      "label": "Top Text Color",
      "default": "#454444"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "paragraph_color",
      "label": "Paragraph Color",
      "default": "#454444"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#303030"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
