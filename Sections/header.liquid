<nav class="navigation">
  <div class="main">
    <div class="left">
      <div class="menubtn">
        <a href="{{ site.url }}">{{ site.name }}</a><span id="openbtn" class="openbtn" onclick="openNav()">&#9776;</span>
        <span id="closebtn" class="closebtn" onclick="closeNav()">&times;</span>
      </div>
