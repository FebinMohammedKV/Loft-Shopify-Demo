{% style %}
  .navigation .main{
    background-color:{{ section.settings.header_bg }};
    padding-bottom: {{ section.settings.padding_bottom | plus: 0 }}px;
    padding-top: {{ section.settings.padding_top | plus: 0 }}px;
    padding-left: {{ section.settings.padding_left | plus: 0 }}px; 
    padding-right: {{ section.settings.padding_right | plus: 0 }}px;  
  }
  
{% endstyle %}


{% if shop.customer_accounts_enabled %}
    {% if customer %}
      <a href="/account">account</a>
      {{ 'log out'  | customer_logout_link }}
    {% else %}
      {{ 'log in ' | customer_login_link }}
      {{ 'register' | customer_register_link }}
    {% endif %}
{% endif %}


{% javascript %}
  $(document).ready(function () {   
    $(".menu-btn").click(function(){
        var adc = $('.menu');
         adc.animate({width: 'toggle'}, "1000");
    });
  })
{% endjavascript %}
  

{%  schema  %} 
  {
  "name": "header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "color",
      "id": "header_bg",
      "label": "Background color",
      "default":"#FFFFFF"
    },
    {
      "type": "text",
      "id": "padding_top",
      "label": "Padding Top",
      "default": "20px"
    },
    {
      "type": "text",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": "20px"
    },
    {
      "type": "text",
      "id": "padding_left",
      "label": "Padding Left",
      "default": "20px"
    },
    {
      "type": "text",
      "id": "padding_right",
      "label": "Padding Right",
      "default": "20px"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width",
      "min": 0,
      "max": 500,
      "step": 5,
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Logo Height",
      "min": 0,
      "max": 500,
      "step": 5,
      "default": 100
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo Link"
    },
    {
      "type": "select",
      "id": "logo_align",
      "label": "Logo Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "header"
    }
  ]
} 
{% endschema %}

