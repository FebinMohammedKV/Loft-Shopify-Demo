{{ 'contact.css'| asset_url | stylesheet_tag }}

<div class="contact-section">
    <h1 class="contact-heading-custom" style="color: {{ section.settings.heading_color }}; font-size:{{ section.settings.heading_size }}px; text-align:{{ section.settings.heading_alignment }}; font-weight:{{ section.settings.text_weight }}; text-transform: {{ section.settings.title_style }};">{{ section.settings.title }}</h1>
    {% form 'contact' %}
      {% if form.posted_successfully? %}
        <p>Thank you for your contact</p>
      {% endif %}
      {{ form.errors | default_errors }}

      <div class="contact-form">
        <div class="form-group">
          <label for="ContactFormName">Full Name<span>*</span></label>
          <input type="text" id="ContactFormName" name="contact[name]" placeholder="Full Name" required>
        </div>

        <div class="form-group">
          <label for="ContactFormPhone">Telephone Number</label>
          <input type="tel" id="ContactFormPhone" name="contact[phone]" placeholder="Telephone Number">
        </div>

        <div class="form-group">
          <label for="ContactFormEmail">Email<span>*</span></label>
          <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="Email" required>
        </div>

        <div class="form-group">
          <label for="ContactFormRegion">Region<span>*</span></label>
          <select id="ContactFormRegion" name="contact[region]" required>
            <option value="" disabled selected>Please Select</option>
            <!-- Add more options as needed -->
          </select>
        </div>

        <div class="form-group">
          <label for="ContactFormCompany">Company Name</label>
          <input type="text" id="ContactFormCompany" name="contact[company]">
        </div>

        <div class="form-group">
          <label for="ContactFormJobTitle">Job Title</label>
          <input type="text" id="ContactFormJobTitle" name="contact[job_title]">
        </div>

        <div class="form-group full-width">
          <label for="ContactFormMessage">Please share any relevant details</label>
          <textarea rows="5" id="ContactFormMessage" name="contact[body]"></textarea>
        </div>

        <div class="form-group full-width">
          <label for="ContactFormFile">Attach Files</label>
          <small>Please attach moodboards, floor plans or details about your property and we will provide you with a bespoke quotation</small>
          <input type="file" id="ContactFormFile" name="contact[file]">
        </div>

        <div class="form-group full-width checkbox">
          <input type="checkbox" id="ContactFormSubscribe" name="contact[subscribe]">
          <label for="ContactFormSubscribe">I agree to receive news and exclusive deals from LOFT.</label>
        </div>

        <div class="form-group full-width">
          <p>By clicking submit, you consent to allow LOFT to process the personal information submitted above to provide you content requested. For more information on how to unsubscribe, our privacy practices, and how we are committed to protecting and respecting your privacy, please review our Privacy Policy.</p>
        </div>

        <div class="form-group full-width submit-btn" style="align-items: {{ section.settings.button_alignment }};">
            <input type="submit" value="{{ section.settings.button_text }}">
        </div>
      </div>
    {% endform %}

</div>

{% schema %}
{
    "name": "Contact",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Contact Us"
        },
        {
            "type": "color",
            "id": "heading_color",
            "label": "Heading Color",
            "default": "#333"
        },
        {
            "type": "select",
            "id": "title_style",
            "label": "Title Style",
            "options": [
                { "value": "lowercase", "label": "Lowercase" },
                { "value": "capitalize", "label": "Capitalize" },
                { "value": "uppercase", "label": "Uppercase" }
            ],
            "default": "uppercase"
        },
        {
            "type": "range",
            "id": "heading_size",
            "label": "Heading Font Size",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 30
        },
        {
            "type": "select",
            "id": "heading_alignment",
            "label": "Heading Text Alignment",
            "options": [
                { "value": "left", "label": "Left" },
                { "value": "center", "label": "Center" },
                { "value": "right", "label": "Right" }
            ],
            "default": "left"
        },
        {
            "type": "select",
            "id": "text_weight",
            "label": "Text Weight",
            "options": [
                { "value": "400", "label": "Lighter" },
                { "value": "500", "label": "Normal" },
                { "value": "650", "label": "Bold" },
                { "value": "800", "label": "Bolder" }
            ],
            "default": "500"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "submit"
        },
        {
            "type": "select",
            "id": "button_alignment",
            "label": "Button Alignment",
            "options": [
                { "value": "left", "label": "Left" },
                { "value": "center", "label": "Center" },
                { "value": "right", "label": "Right" }
            ],
            "default": "left"
        }
    ],
    "presets": [
        {
            "name": "Contact"
        }
    ]
}
{% endschema %}